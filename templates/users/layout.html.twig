<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}KnaufCRM{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <!-- Bootstrap -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}" />
        <!-- Main CSS file -->
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
    {% endblock %}

</head>
<body>
<!-- Menú -->
<header>
    <nav class="navbar navbar-expand-lg navbar-light colorspecial" id="menu">
        <a class="navbar-brand" href="{{ path('index') }}">
            <img src="https://heyav.com/knaufcrm/img/Knauf_logo.svg" width="97" height="80" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navbar-nav ml-auto">

                <li class="nav-item active m-1  ">
                    <a href="{{ path('logout') }}" class="btniniciarsesion">Cerrar sesión</a>
                </li>
            </ul>
        </div>
    </nav>
</header>


<!-- Steps bar -->
<div class="steps-bar my-5 d-flex justify-content-between mx-auto">
    <a href="{{ path('users_training_studio') }}">
        <div class="step{% if curPage == 'studio' %} active{% endif %}">
            <span>1</span>

            <div class="step-state{{ app.session.get('training') is not empty and app.session.get('training').studioConfirmed ? ' completed' }}"></div>

            <div class="step-info">
                {{ app.session.get('training') is not empty and app.session.get('training').studioConfirmed ? 'Estudio: ' ~ app.user.companyName }}
            </div>
        </div>
    </a>

    <a href="{{ path('users_training_blocks') }}">
        <div class="step{% if curPage == 'blocks' %} active{% endif %}">
            <span>2</span>

            <div class="step-state{{ app.session.get('training') is not empty and app.session.get('training').blocks is not empty ? ' completed' }}"></div>

            <div class="step-info">{{ app.session.get('training') is not empty and app.session.get('training').blocks is not empty ? app.session.get('training').blocks|length ~ ' bloques seleccionados' }}</div>
        </div>
    </a>

    <a href="{{ path('users_training_date') }}">
        <div class="step{% if curPage == 'date' %} active{% endif %}">
            <span>3</span>

            <div class="step-state{{ app.session.get('training') is not empty and app.session.get('training').datetime is not empty and app.session.get('training').enabled == false ? ' waiting'}}"></div>

            <div class="step-info">
                {% if app.session.get('training') is not empty and app.session.get('training').datetime is not empty %}
                    {{ app.session.get('training').datetime|date("d-m-Y H:i") }} <br>
                    {{ app.session.get('training').enabled ? '(confirmado)' : '(pendiente de confirmación)' }}
                {% endif %}
            </div>
        </div>
    </a>

    <a href="{{ path('users_training_competitors_list') }}">
        <div class="step{% if curPage == 'competitors' %} active{% endif %}">
            <span>4</span>

            <div class="step-state{{ app.session.get('training') is not empty and app.session.get('training').competitors is not empty ? ' completed' }}"></div>

            <div class="step-info">
                {% if app.session.get('training') is not empty %}
                    {{ app.session.get('training').competitors|length }}
                    participante{{ app.session.get('training').competitors|length > 1 ? 's' }}
                {% endif %}
            </div>
        </div>
    </a>
</div>

<!-- Main -->
<main>
    {% block body %}

    {% endblock %}
</main>


<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <p style="text-align: center;"><img src="https://heyav.com/knaufcrm/img/Knauf_footer.svg" alt="" height="111" width="71"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-4">
                <p class="footerhastag"> #KnaufAndBreakfast</p>
            </div>
            <div class="col-md-12 col-lg-4">
                <p><a href="https://www.knauf.es/" style="color:white;" class="footerLinkWeb">knauf.es</a></p>
            </div>
            <div class="col-md-12 col-lg-4">
                <p style="line-height: 3rem;"><img src="https://heyav.com/knaufcrm/img/logo_facebook.png" alt="" height="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_twitter.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_instagram.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_youtube.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_link.png" alt="" height="24" width="24" style="margin:0.5rem;">
                </p>
            </div>
        </div>
    </div>
</footer>

{% block javascripts %}
    <script src="{{ asset('assets/js/jquery-3.5.1.min.js') }}" ></script>
    <script src="{{ asset('assets/js/bootstrap/bootstrap.bundle.min.js') }}" ></script>
    <script src="{{ asset('assets/js/main.js') }}" ></script>
    <script>
        (function($) {
            'use strict';

            let presentationSent = {{ app.session.get('training') is not empty and app.session.get('training').sent ? 'true' : 'false' }};

            $("form").submit(function(e){
                if (presentationSent) {
                    alert('Cancela la solicitud en el paso 4 para modificar la formación');
                    e.preventDefault();
                }
            });
        })(jQuery);
    </script>
{% endblock %}
</body>
</html>
