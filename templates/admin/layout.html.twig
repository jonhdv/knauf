<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}- Knauf{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <!-- Bootstrap -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}" />
        <!-- Main CSS file -->
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}" />
    {% endblock %}

</head>
<body>
<!-- Menú -->
<header>
    <nav class="navbar navbar-expand-lg navbar-light colorspecial" id="menu">
        <a class="navbar-brand" href="{{ path('index') }}">
            <img src="https://heyav.com/knaufcrm/img/Knauf_logo.svg" width="80" height="80" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item active m-1  ">
                    <a href="{{ path('admin_trainings') }}" class="button-menu">Formaciones</a>
                </li>

                <li class="nav-item active m-1  ">
                    <a href="{{ path('admin_users_management') }}" class="button-menu">Usuarios</a>
                </li>

                <li class="nav-item active m-1  ">
                    <span class="btniniciarsesion"> {{ app.user.name }}
                        <a href="{{ path('logout') }}">
                             <img class="logout-icon" title="Cerrar sesión" src="{{ asset('assets/icon/turn-off.svg') }}">
                        </a>
                    </span>
                </li>
            </ul>
        </div>
    </nav>
</header>

<!-- Main -->
<main class="py-4 px-2">
    {% block body %}

    {% endblock %}
</main>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <p style="text-align: center;"><img src="https://heyav.com/knaufcrm/img/Knauf_footer.svg" alt="" height="111" width="71"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-4">
                <p class="footerhastag"> #KnaufAndBreakfast</p>
            </div>
            <div class="col-md-12 col-lg-4">
                <p><a href="https://www.knauf.es/" style="color:white;" class="footerLinkWeb">knauf.es</a></p>
            </div>
            <div class="col-md-12 col-lg-4">
                <p style="line-height: 3rem;"><img src="https://heyav.com/knaufcrm/img/logo_facebook.png" alt="" height="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_twitter.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_instagram.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_youtube.png" alt="" height="20" width="24" style="margin:0.5rem;">
                    <img src="https://heyav.com/knaufcrm/img/logo_link.png" alt="" height="24" width="24" style="margin:0.5rem;">
                </p>
            </div>
        </div>
    </div>
</footer>

{% block javascripts %}
    <script src="{{ asset('assets/js/jquery-3.5.1.min.js') }}" ></script>
    <script src="{{ asset('assets/js/bootstrap/bootstrap.bundle.min.js') }}" ></script>
    <script src="{{ asset('assets/js/main.js') }}" ></script>
    <script src="{{ asset('assets/js/sweetalert2.js') }}" ></script>
{% endblock %}
</body>
</html>
